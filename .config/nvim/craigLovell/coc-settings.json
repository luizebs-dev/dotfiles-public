{
	"coc.preferences.formatOnSaveFiletypes": [
		"css",
		"markdown",
		"javascript",
		"graphql",
		"html",
		"yaml",
		"php",
		"json",
		"python"
	],
	"coc.preferences.hoverTarget": "float",
	// python config
	"python.linting.enabled": true,
	"python.linting.pylintEnabled": true,
	// PHP
	"intelephense.files.exclude": [
		"**/.git/**",
		"**/.svn/**",
		"**/.hg/**",
		"**/CVS/**",
		"**/.DS_Store/**",
		"**/node_modules/**",
		"**/bower_components/**",
		"**/vendor/**/{Test,Tests,test,tests}/**",
		"**/.history/**",
		"package-lock.json",
		"**/vendor/**/vendor/**"
	],
	"intelephense.files.associations": [
		"*.php",
		"*.php-cs",
		"*.phtml"
	],
//	"clangd.path": "/Users/craiglovell/.config/coc/extensions/coc-clangd-data/install/10.0.0/clangd_10.0.0/bin/clangd"
	"clangd.path": "/usr/bin/clangd"
}
